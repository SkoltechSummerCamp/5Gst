<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/console_layout_horizontal_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/console_background"
    android:padding="10dp">

    <ScrollView
        android:id="@+id/console_layout_vertical_scroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/console_layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textColor="@color/consoleTextColor"
            android:textIsSelectable="true" />
    </ScrollView>
</HorizontalScrollView>