<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/stage_name"
            android:layout_width="231dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:hint="@string/pipeline_name"
            app:hintEnabled="false" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:foregroundGravity="right"
            app:srcCompat="@android:drawable/ic_menu_delete" />
    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iperf_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="10dp"

            android:text="@string/this_device"
            android:textAppearance="@style/Headline2"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/device_args"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingStart="10dp"
            app:hintEnabled="false" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iperf_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/server"
            android:paddingStart="10dp"

            android:textAppearance="@style/Headline2"
            android:textColor="?android:attr/textColorPrimary">

        </TextView>


        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/server_args"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingStart="10dp"
            app:hintEnabled="false" />

    </LinearLayout>



</LinearLayout>

</LinearLayout>
